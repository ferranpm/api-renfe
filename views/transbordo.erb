<h2><%= horario.origen.nucleo.nombre %></h2>
<h3><%= horario.origen.nombre %> - <%= horario.destino.nombre %></h3>
<h4><%= horario.date %></h4>
<table class="bordered centered striped">
  <thead>
    <tr>
      <th>Linea</th>
      <th>Salida</th>
      <th>Llegada</th>
      <th>Linea</th>
      <th>Salida</th>
      <th>Llegada</th>
    </tr>
  </thead>
  <tbody>
    <% horario.horas.each do |line| %>
      <tr>
        <td><%= line.linea_1 %></td>
        <td><%= line.hora_inicio_1 %></td>
        <td><%= line.hora_fin_1 %></td>
        <td><%= line.linea_2 %></td>
        <td><%= line.hora_inicio_2 %></td>
        <td><%= line.hora_fin_2 %></td>
      </tr>
    <% end %>
  </tbody>
</table>
